<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>{% block title %}Welcome!{% endblock %}</title>
  {% block stylesheets %}
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  {% endblock %}
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="{{ asset('css/nav.css') }}" rel="stylesheet">
  <link href="{{ asset('css/style.css') }}" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@1,700&display=swap" rel="stylesheet">
</head>


<body>
  <img class="logo" onclick="window.location='/'" src="{{ asset('/img/logo.png')}}">
  <div class="shipping__cart">
    <img class="panier" onclick="window.location='/panier'" src="{{ asset('/img/panier.png')}}">
  </div>

  <header>

    <div class="open">
      <span class="cls"></span>
      <span>
        <ul class="sub-menu ">

          
          
          {% if app.user %}
          <li> <a href="/">HOME</a> </li>
          <li> <a href="/logout">DECONNEXION</a> </li>
          <li> <a href="/profile">PROFIL</a> </li>
         <li  li> <a href="/restaurants">RESTAURANTS</a> </li>
          {% else %}
          <li> <a href="/">HOME</a> </li>
          <li> <a href="/sign">SE CONNECTER</a> </li>
          <li> <a href="/signup">PROFIL</a> </li>
          <li> <a href="/restaurants">RESTAURANTS</a> </li>
  
          {% endif %}
      


        </ul>
      </span>
      <span class="cls"></span>

      <div class="nav--responsive__none">

      </div>
      <div class="overlay"></div>
    </div>



  </header>

  {% block body %}{% endblock %}
  {% block javascripts %}
  <script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
  <script src="{{ asset('/js/nav.js')}}"></script>
  {% endblock %}
</body>

</html>